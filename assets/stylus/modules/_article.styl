// 記事
$pageArticle {
    .page_article_menu_bar {
        position: sticky;
        top: -1px;
        z-index: 12;
        }
    .page_article_contents_container {
        width: 985px;
        margin: 30px auto 120px;
        @media only screen and (max-width: 1023px) {
            margin: 0px 0 80px;
            width: 100%;
        }

        .page_article_container {
            display: flex;
            justify-content: space-between;
            margin: 0px 0 200px;
            @media only screen and (max-width: 1023px) {
                display: block;
                margin: 0px 0 80px;
                width: 100%;
            }
            .page_article_contents {
                width: 600px
                @media only screen and (max-width: 1023px) {
                  width: 90%;
                  padding: 0 5%;
                }
                .page_article_policy {
                    margin: 120px 0 0 0;
                    @media only screen and (max-width: 1023px) {
                        display: none;
                    }
                }
            }
            .page_hotel_sns {
                display: none;
                @media only screen and (max-width: 1023px) {
                  display: block;
                  margin: 50px 0 30px;
                }
            }
            // ヘッダーなし
            .page_reservation_container.no_head {
                width: 332px;
                margin-top: 130px;
                height: calc(100vh - 20px);
                position: sticky;
                top: 10px;
                @media only screen and (max-width: 1023px) {
                    position: static;
                    height: 100%;
                    background-color: $white;
                    margin: 0px;
                    width: 90%;
                    padding: 0 5%;
                }
            }
            // ヘッダーあり
            .page_reservation_container.with_head {
                width: 332px;
                margin-top: 130px;
                height: calc(100vh - 131px);
                position: sticky;
                top: 10px;
                @media only screen and (max-width: 1023px) {
                    position: static;
                    height: 100%;
                    background-color: $white;
                    margin: 0px;
                    width: 90%;
                    padding: 0 5%;
                }
            }
        }
        .page_other_list {
            @media only screen and (max-width: 1023px) {
                padding: 0 0 0;
            }
        }
        .similar {
            margin-top: 100px;
            @media only screen and (max-width: 1023px) {
                margin-top: 30px;
            }
        }
    }
}