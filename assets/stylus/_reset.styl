// ページ全体のリセット内容

* {
  padding: 0
  margin: 0
  font-family: "游ゴシック体", YuGothic, "游ゴシック Medium", "Yu Gothic Medium", "游ゴシック", "Yu Gothic", sans-serif;
  outline: none;
}

a {
  text-decoration: none;
}

.font_montserrat {
  font-family: 'Montserrat', sans-serif;
}

button {
  border: none;
  background-color: rgba(0,0,0,0);
}

select {
  -webkit-appearance: none;
  -moz-appearance: none;
  appearance: none;
}

input {
  border:none;
  background:none;
}
